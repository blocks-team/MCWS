{
    "compilerOptions": {
        "outDir": "./lib",
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}